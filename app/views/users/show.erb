<% if logged_in? %>
<div> <%= render "users/nav"%> </div>
<%end%>


<!--break-->
<div class="row">
    <div class="question_show col-md-8 col-md-offset-2">
        <table class="table table-hover">
            <h4>Current User: <strong><%=@user.full_name%></strong></h4>
            <thead>
                <tr>
                <th scope="col" >My Questions</th>
                </tr>
            </thead>

            <tbody>
                <% @questions.each_with_index do |question,index|%>
                <tr class="table-secondary">
                    <th scope="row"><%=index+1%></th>
                    <td><%=link_to question.title, question_path(@current_user,question), {:style=>'color: rgb(0, 0, 0);', :class => "css_class"} %></td>
                    <td><%=link_to "edit", edit_question_path(question)%></td>
                    <td><%=link_to "delete", delete_question_path(@current_user,question), :method => :delete %></td>
                </tr>
                <%end%>
            </tbody>

            <thead>
                <tr>
                <th scope="col" >My Answered Questions</th>
                </tr>
            </thead>

            <tbody>
                <% @user.question_arr.each_with_index do |question,index|%>
                <tr>
                    <th scope="row"><%=index+1%></th>
                    <td><%=link_to question.title, question_path(@current_user,question), {:style=>'color: rgb(0, 0, 0);', :class => "css_class"} %></td>
                </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>


