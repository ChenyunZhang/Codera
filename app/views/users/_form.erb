<% if @errors %>
  <% @errors.each do |error|%>
    <p style= "color: red"> <%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f|%>
<%=f.label :first_name%>
<%=f.text_field :first_name%><br/>
<%=f.label :last_name%>
<%=f.text_field :last_name%><br/>
<%=f.label :email%>
<%=f.email_field :email%><br/>
<%=f.label :password%>
<%=f.email_field :password%><br/>
<%= f.submit "submit"%>
<%end%>