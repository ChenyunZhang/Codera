<%= form_for @question do |f|%>
<%=f.label :title%>
<%=f.text_field :title%><br/>
<%=f.label :content%>
<%=f.text_field :content%><br/>
user: <%=f.collection_select :user_id, User.all, :id, :full_name%><br>
  <%= f.fields_for :categories, @question.categories.build do |categories_fields| %>
    Tag: <%= categories_fields.text_field :name %><br>
  <% end %>
<%= f.submit "submit"%>
<%end%>