<%=render "users/nav"%>
<div class="row" id="form">
  <div class="col-md-4 col-md-offset-4">
    <%=form_for @question do |f|%>
      <h1 class= "welcome">Post a question</h1>
      <br>
      <%= render "users/error"%>
      <div class="form-group">
        <%=f.text_field :title, placeholder: "Title", class: "form-control input-lg"%>
      </div>
      <br>
      <%= f.fields_for :categories, @question.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name, placeholder: "Category",class: "form-control input-lg" %>
      <% end %>
      <br>
      <div class="form-group">
        <%=f.text_area :content, rows: 7, placeholder: "Start here...",class:"form-control input-lg"%>
      </div>
      <br>
      <%=f.submit "Post", class: "btn-block btn-primary btn-lg"%>
    <%end%>
  </div>
</div>