<%= render "users/nav"%>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <% @questions.each do |question| %>
      <div class="col-md-6">
      <div class= "card">
        <div class="card-header">Question</div>
        <img src="https://images.unsplash.com/photo-1544568100-847a948585b9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60"  class="img-thumbnail" alt="Responsive image">
          <div class="card-body">
            <h5 class="card-title"><%=question.title%></h5>
            <p><%=link_to "Answer", question_path(@current_user, question), class:"btn btn-primary btn-block"%></p>
          </div>
      </div>
  </div>
  <%end%>
</div>


